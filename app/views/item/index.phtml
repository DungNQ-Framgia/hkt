<?php
use Phalcon\Tag;
$count = 1;
foreach ($page->items as $item) {
    if ($count % 2 === 1) {
        echo Tag::tagHtml('div', ['class' => 'row item-row']);
    }
    echo $this->partial('item/_an_item', ['item' => $item]);
    if ($count % 2 === 0) {
        echo Tag::tagHtmlClose('div');
    }
    $count++;
}

if ($count % 2 === 0) {
    echo Tag::tagHtmlClose('div');
}

echo $pagination->generatePagination();
